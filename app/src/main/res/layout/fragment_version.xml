<!--            android:layout_height="wrap_content"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:layout_below="@id/head_title"-->
<!--            android:id="@+id/computer_type_recycle"-->
<!--            android:textSize="11sp"-->
<!--            />-->

    </RelativeLayout>
</RelativeLayout>