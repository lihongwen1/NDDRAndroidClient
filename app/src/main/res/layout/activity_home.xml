<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.HomeActivity">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#101112">
        <TextView
            android:layout_width="136dp"
            android:layout_height="22.5dp"
            android:text="大道智创客户端"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:textColor="#ffffff"/>
        <ddr.example.com.nddrandroidclient.widget.textview.LineTextView
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:id="@+id/status"
            android:text="基础状态"
            android:textSize="12dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/mapmanager"
            android:layout_marginRight="34dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:drawableLeft="@mipmap/banbenxinxi"
            />
        <ddr.example.com.nddrandroidclient.widget.textview.LineTextView
            android:id="@+id/mapmanager"
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginRight="34dp"
            android:layout_toLeftOf="@id/taskmanager"
            android:drawableLeft="@mipmap/banbenxinxi"
            android:gravity="center"
            android:text="地图管理"
            android:textColor="#ffffff"
            android:textSize="12dp" />
        <ddr.example.com.nddrandroidclient.widget.textview.LineTextView
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:id="@+id/taskmanager"
            android:text="任务管理"
            android:textSize="12dp"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:gravity="center"
            android:drawableLeft="@mipmap/banbenxinxi"/>
        <ddr.example.com.nddrandroidclient.widget.textview.LineTextView
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:id="@+id/highset"
            android:text="高级设置"
            android:textSize="12dp"
            android:layout_toRightOf="@id/taskmanager"
            android:layout_centerInParent="true"
            android:layout_marginLeft="34dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:drawableLeft="@mipmap/banbenxinxi"
            />
        <ddr.example.com.nddrandroidclient.widget.textview.LineTextView
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:id="@+id/typeversion"
            android:text="版本管理"
            android:textSize="12dp"
            android:layout_toRightOf="@id/highset"
            android:layout_centerInParent="true"
            android:layout_marginLeft="34dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:drawableLeft="@mipmap/banbenxinxi"
            />
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22.5dp"
            android:src="@mipmap/tuichu"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="25dp"
            android:id="@+id/tv_quit"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#262728"
            android:layout_alignParentBottom="true"
            android:id="@+id/line_view"
            />
    </RelativeLayout>
    <ddr.example.com.nddrandroidclient.widget.view.DDRViewPager
        android:id="@+id/vp_home_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:layout_below="@id/title_layout"
        >
    </ddr.example.com.nddrandroidclient.widget.view.DDRViewPager>

</RelativeLayout>