<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="367dp"
        android:background="#101112">
        <TextView
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:text="暂无地图信息，"
            android:textSize="16sp"
            android:id="@+id/tv_ti_map"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:text="新建地图"
            android:textSize="16sp"
            android:layout_toRightOf="@id/tv_ti_map"
            android:layout_centerInParent="true"
            android:textColor="#0399ff"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shrink_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/left_layout"
        android:layout_marginTop="30dp"
        >
        <!--伸缩的内容-->
        <LinearLayout
            android:id="@+id/shrink_tail_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@mipmap/shrink_tail"
            android:visibility="gone"
            >

        </LinearLayout>
        <!--点击是否伸缩-->
        <ImageView
            android:id="@+id/iv_shrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_shrink"
            android:scaleType="center"
            android:background="@mipmap/shrink_head"
            android:layout_toRightOf="@id/shrink_tail_layout"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="366.5dp"
        android:layout_height="match_parent"
        android:background="#161718">
        <TextView
            android:layout_width="66dp"
            android:layout_height="18dp"
            android:text="当前任务:"
            android:textColor="#ccffffff"
            android:textSize="12sp"
            android:layout_marginTop="32.5dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/tv_now_task"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="未选择"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_toRightOf="@id/tv_now_task"
            android:layout_marginTop="32.5dp"
            android:layout_marginLeft="9dp"
            android:id="@+id/tv_new_map"
            />
        <ddr.example.com.nddrandroidclient.widget.CircleBarView
            android:layout_width="130dp"
            android:layout_height="134dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="32dp"
            android:id="@+id/circle"
            />
        <ddr.example.com.nddrandroidclient.widget.StatusSwitchButton
            android:id="@+id/status_switch_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/circle"
            android:layout_marginTop="110px"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>



</RelativeLayout>