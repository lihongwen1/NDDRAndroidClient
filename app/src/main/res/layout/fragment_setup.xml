<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#101112">
    <RelativeLayout
        android:layout_width="116dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导航参数"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_naParam"
            android:textColor="#99ffffff"
            android:layout_marginTop="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动充电"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/tv_naParam"
            android:layout_marginTop="55dp"
            android:textColor="#99ffffff"
            android:id="@+id/tv_autoCharging"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="传感器配置"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:textColor="#99ffffff"
            android:layout_alignTop="@id/tv_autoCharging"
            android:id="@+id/tv_sensorSet"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="机器检测"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:textColor="#99ffffff"
            android:layout_alignTop="@id/tv_sensorSet"
            android:id="@+id/tv_robotTest"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本管理"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:textColor="#99ffffff"
            android:layout_alignTop="@id/tv_robotTest"
            android:id="@+id/tv_editionManager"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助与反馈"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:textColor="#99ffffff"
            android:layout_alignTop="@id/tv_editionManager"
            android:id="@+id/tv_helpFeedback"
            />
    </RelativeLayout>
    <ddr.example.com.nddrandroidclient.widget.view.DDRViewPager
        android:id="@+id/vp_home_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="116.5dp"
        >
    </ddr.example.com.nddrandroidclient.widget.view.DDRViewPager>

</RelativeLayout>