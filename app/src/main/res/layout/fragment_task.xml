<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#101112">
    <TextView
        android:layout_width="111dp"
        android:layout_height="32dp"
        android:text="新建任务"
        android:textColor="#eaf1f5"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/tv_new_task_list"
        android:background="@drawable/bt_bg__map"
        />
    <TextView
        android:layout_width="111dp"
        android:layout_height="32dp"
        android:text="批量管理"
        android:textColor="#eaf1f5"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_toRightOf="@id/tv_new_task_list"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="23dp"
        android:id="@+id/tv_pl_manager"
        android:background="@drawable/bt_bg__map"
        />
    <TextView
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:text="删除"
        android:textColor="#ccffffff"
        android:layout_alignParentRight="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textSize="10sp"
        android:id="@+id/tv_delete_task_list"
        android:background="@drawable/bt_bg__map"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycle_task_list"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>


</RelativeLayout>