<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:textColor="#ffffff"
        android:text="1"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/tv_list_num"
        />
    <TextView
        android:layout_width="210dp"
        android:layout_height="34dp"
        android:background="#161718"
        android:layout_toRightOf="@+id/tv_list_num"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/tv_map_list"
        />
    <TextView
        android:layout_width="210dp"
        android:layout_height="34dp"
        android:background="#161718"
        android:layout_toRightOf="@+id/tv_map_list"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_task_list"
        android:layout_marginLeft="20dp"
        />
    <RelativeLayout
        android:layout_width="210dp"
        android:layout_height="34dp"
        android:background="#161718"
        android:layout_toRightOf="@+id/tv_task_list"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_start_h"
            android:textSize="12sp"
            android:textColor="#eaf1f5"
            android:hint="09:"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:id="@+id/tv_start_m"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:textColor="#eaf1f5"
            android:hint="00 -"
            android:layout_toRightOf="@id/tv_start_h"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_end_h"
            android:textSize="12sp"
            android:textColor="#eaf1f5"
            android:hint="12:"
            android:layout_toRightOf="@id/tv_start_m"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="16dp"
            android:id="@+id/tv_end_m"
            android:textSize="12sp"
            android:textColor="#eaf1f5"
            android:hint="00"
            android:layout_toRightOf="@id/tv_end_h"
            android:layout_marginLeft="5dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="开始"
        android:textColor="#99ffffff"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_toLeftOf="@id/tv_task_status"
        android:layout_marginRight="20dp"
        android:id="@+id/tv_task_run"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="状态"
        android:textColor="#99ffffff"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_marginRight="47dp"
        android:gravity="center"
        android:id="@+id/tv_task_status"
        />


</RelativeLayout>