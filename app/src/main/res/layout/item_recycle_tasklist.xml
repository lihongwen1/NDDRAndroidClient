<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:textColor="#ffffff"
        android:text="1"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/tv_list_num"
        />
    <TextView
        android:layout_width="122dp"
        android:layout_height="34dp"
        android:layout_toRightOf="@+id/tv_list_num"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/tv_map_list"
        android:textSize="12sp"
        android:textColor="#eaf1f5"
        android:text="地图列表-1"
        />
    <TextView
        android:layout_width="175dp"
        android:layout_height="34dp"
        android:background="#161718"
        android:layout_toRightOf="@+id/tv_map_list"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_task_time"
        android:layout_marginLeft="20dp"
        />
    <ddr.example.com.nddrandroidclient.widget.view.NumEdit
        android:layout_width="106dp"
        android:layout_height="34dp"
        android:layout_toRightOf="@id/tv_task_time"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/task_num_check"
        />
    <TextView
        android:layout_width="80dp"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/task_num_check"
        android:layout_marginLeft="55dp"/>
    <TextView
        android:layout_width="62dp"
        android:layout_height="34dp"
        android:text="暂停"
        android:textColor="#99ffffff"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_toLeftOf="@id/tv_task_status"
        android:layout_marginRight="12dp"
        android:id="@+id/tv_task_run"
        />
    <TextView
        android:layout_width="62dp"
        android:layout_height="34dp"
        android:text="终止"
        android:textColor="#99ffffff"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:layout_marginRight="36dp"
        android:gravity="center"
        android:id="@+id/tv_task_status"
        />


</RelativeLayout>