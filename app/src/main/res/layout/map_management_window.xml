<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/iv_triangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/front_triangle_shape"
        android:layout_marginLeft="100dp"

        />
    <RelativeLayout
        android:layout_width="122dp"
        android:layout_height="190dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/management_window_shape"
        >
        <TextView
            android:id="@+id/tv_rename"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="13.5dp"
            android:text="   修改名称"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:drawableLeft="@mipmap/iv_rename"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tv_switch"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="13.5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="   切换地图"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_below="@id/tv_rename"
            android:drawableLeft="@mipmap/iv_switch"
            />
        <TextView
            android:id="@+id/tv_recover"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="   原图恢复"
            android:paddingLeft="13.5dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_below="@id/tv_switch"
            android:drawableLeft="@mipmap/iv_recover"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="   删除地图"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_below="@id/tv_recover"
            android:drawableLeft="@mipmap/iv_delete"
            android:paddingLeft="13.5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="13.5dp"
            android:text="   查看详情"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:drawableLeft="@mipmap/iv_rename"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_delete"
            />
    </RelativeLayout>

</RelativeLayout>